#!/usr/bin/env zsh -eu

TCLSH=""

if { which tclsh | read TCLSH }
then
  :
elif { which tclsh8.6 | read TCLSH }
then
  :
fi

if [[ ${TCLSH} == "" ]]
then
  print "Could not find tclsh!"
  exit 1
fi

export STC=$( cd $( dirname $( dirname $0 ) ) ; /bin/pwd )

${TCLSH} ${STC}/scripts/stc-debug.tcl ${*}
